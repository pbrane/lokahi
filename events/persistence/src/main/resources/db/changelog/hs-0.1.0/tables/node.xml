<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="Mohammad-Junid" id="0.1.0-node">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="node"/>
            </not>
        </preConditions>

        <createTable tableName="node">
            <column name="id" type="BIGINT" autoIncrement="true"/>

            <column name="tenant_id" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="node_label" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>

            <column name="monitoring_location_id" type="bigint" defaultValue="0" />

            <column name="node_info" type="jsonb" />

        </createTable>

        <addPrimaryKey tableName="node" columnNames="id" constraintName="pk_node_id"/>
    </changeSet>
</databaseChangeLog>
