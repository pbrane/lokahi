<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="jbeuree" id="distribute_event">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="event"/>
                <primaryKeyExists primaryKeyName="pk_events_id"/>
            </and>
        </preConditions>

        <dropPrimaryKey tableName="event"/>
        <addPrimaryKey tableName="event" columnNames="id, tenant_id" constraintName="pk_events_id"/>
        <sql>DO
             '
             BEGIN
             if exists(select 1 from pg_extension where extname = ''citus'') THEN
               perform create_distributed_table(''event'', ''tenant_id''); END IF; END; ';
         </sql>
    </changeSet>

</databaseChangeLog>
