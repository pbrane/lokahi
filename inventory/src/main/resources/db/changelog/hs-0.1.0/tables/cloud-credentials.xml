<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="tbigg" id="0.1.0-azure-cloud-credential">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="azure-cloud-credentials"/>
            </not>
        </preConditions>

        <createTable tableName="azure_cloud_credential">
            <column name="id" type="BIGINT" autoIncrement="true"/>

            <column name="tenant_id" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="client_id" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>

            <column name="client_secret" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>

            <column name="resource_group" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>

            <column name="subscription_id" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>

            <column name="create_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="azure_cloud_credential" columnNames="id"
                       constraintName="pk_azure_cloud_credential_id"/>

    </changeSet>
</databaseChangeLog>
