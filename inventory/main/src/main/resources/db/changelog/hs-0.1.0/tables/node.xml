<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="tbigg" id="0.1.0-node">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="node"/>
            </not>
        </preConditions>

        <createTable tableName="node">
            <column name="id" type="BIGINT" autoIncrement="true"/>

            <column name="tenant_id" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="create_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="node_label" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>

            <column name="monitoring_location_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="system_objectid" type="text" />
            <column name="system_name" type="text" />
            <column name="system_desc" type="text" />
            <column name="system_location" type="text" />
            <column name="system_contact" type="text" />

        </createTable>

        <addPrimaryKey tableName="node" columnNames="id" constraintName="pk_node_id"/>

        <addForeignKeyConstraint constraintName="fk_monitoring_location_id" onDelete="CASCADE"
                                 baseTableName="node" baseColumnNames="monitoring_location_id"
                                 referencedTableName="monitoring_location" referencedColumnNames="id"/>

    </changeSet>

    <changeSet id="0.1.1-node-azure-info" author="fooker">
        <addColumn tableName="node">
            <column name="azure_resource" type="varchar"/>
            <column name="azure_resource_group" type="varchar"/>
            <column name="azure_client_id" type="varchar"/>
            <column name="azure_client_secret" type="varchar"/>
            <column name="azure_subscription_id" type="varchar"/>
            <column name="azure_directory_id" type="varchar"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
